<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlanetDetailsFragment">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/white"
            android:background="@color/purple_500"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/myToolbar"
            android:elevation="8dp" />


        <androidx.cardview.widget.CardView
            android:background="@drawable/card_background"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/detailsCardView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:layout_gravity="center"
            app:cardUseCompatPadding="true"
            app:contentPadding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:id="@+id/name"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="name" />

                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:id="@+id/rotationPeriod"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="height" />

                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:id="@+id/orbitalPeriod"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="mass" />

                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:id="@+id/diameter"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="hair_color" />

                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:id="@+id/gravity"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="skin_color" />

                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:id="@+id/terrain"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="birth_year" />

                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:id="@+id/surfaceWater"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="surfaceWater" />

                <TextView
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:id="@+id/population"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="population" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>
</layout>

